body
	background #132027
	overflow-y hidden
	overflow-x hidden !important
	&.modal-active
		overflow-y hidden
		.darken-overlay
			opacity 1 !important
			visibility visible !important

.notif-wrapper
	display none !important

.nav-container
	width 100%
	height 77px
	background #0D171D
	box-shadow 0 0 10px 0 rgba(0,0,0,0.06)
	.nav-content
		width calc(100% - 50px)
		margin 0 auto
		display flex 
		height 100%
		justify-content space-between
		flex-flow wrap row
		align-items center
		.logo-wrap
			display flex
			justify-content left
			align-items center
			.logo
				background-image url("/img/dtech-logo.png")
				background-size cover
				background-position center
				background-repeat no-repeat
				width 37px
				height 37px
				margin-right 10px
			.title
				color white
				font-size 22px
				letter-spacing .3px
				margin 0
		.nav-flex
			display flex
			justfiy-content right
			align-items center
			.report-error
				display flex
				justify-content left
				align-items center
				cursor pointer
				height 33px
				margin-right 15px
				border-radius .3em
				background red
				width fit-content
				padding 0 30px 0 15px
				transition background .3s
				&:hover
					background #db0000
				.icon
					background-image url("/img/error.svg")
					background-position center
					background-repeat no-repeat
					width 45px
					height 22px
					border-radius 50%
					margin-right 10px
				p
					color white
					font-size 15px
					font-weight 500
					margin 0 0 0 -10px
					width fit-content
					letter-spacing .3px
			.logout-btn
				background #f05027
				padding 8px 30px
				color white
				letter-spacing .8px
				font-size 15px
				font-weight 500
				cursor pointer
				border none
				outline none
				border-radius .3em
				transition background .3s
				&:hover
					background #e0441d

.page-content
	width calc(100% - 60px)
	max-width 1600px
	height calc(100% - 107px)
	margin 30px auto 0
	display flex
	justify-content left
	position relative
	overflow hidden
	.stream-container
		margin-right 30px
		overflow-y auto
		overflow-x hidden
		width calc(100% - 430px)
		display flex
		flex-flow column nowrap
		.stream-video
			position relative
			width fit-content
			height fit-content
			overflow hidden
			img
				width 100%
			.slate
				z-index 20
			.slate,
			#my-video
				width 100%
				height 100%
				position absolute
				top 0
				left 0
		.stream-info-container
			width 100%
			margin 30px 0
			height fit-content
			.stream-info-content
				width 100%
				margin 0
				height fit-content
				position relative
				.title-viewer-wrap
					display flex
					justify-content left
					width 100%
					.stream-title
						color white
						font-size 30px
						letter-spacing .5px
						line-height 110%
						font-weight 700
						width 100%
						padding-right 20px
						text-align left
						word-break break-all
					.viewer-count-container
						display flex
						justify-content left
						align-items center
						width fit-content
						min-width fit-content
						height fit-content
						margin 7px 0 0
						.icon
							background-image url("/img/viewer-icon.svg")
							background-size cover
							background-position center
							background-repeat no-repeat
							width 18px
							height 22px
							margin-right 5px
						p
							color #f5613b
							font-size 14px
							letter-spacing .3px
							margin -2px 0 0
				.stream-runner
					font-size 18px
					color #b3b3b3
					font-weight 500
					letter-spacing .5px
					margin-top 5px
					text-align:justify
	.chat-widget
		width 400px
		min-height 60%
		height calc(100% - 130px)
		max-height calc(100% - 30px)
		background #0D171D
		box-shadow 0 0 10px 0 rgba(0,0,0,0.06)
		position relative
		&.disabled
			.input-container
				display none
			.enable-autoscroll
				bottom 20px
			.live-chat-container
				height calc(100% - 61px)
		.title-container
			height 60px
			border-bottom 1px solid #132027
			width calc(100% - 30px)
			padding 0 15px
			position relative
			display flex
			justify-content space-between
			align-items center
			.title
				color lightgrey
				font-size 20px
				font-weight 500
				letter-spacing .3px
			.chat-status
				text-transform uppercase
				font-size 14px
				font-weight 800
				letter-spacing .3px
				margin-top 3px
		.enable-autoscroll
			background rgba(0,0,0,0.8)
			color white
			border none
			outline none
			font-size 14px
			position absolute
			padding 8px 20px
			bottom 65px
			left 50%
			transform translateX(-50%)
			cursor pointer
			letter-spacing .3px
			z-index 100
			border-radius .3em
			visibility hidden
			opacity 0
			transition opacity .3s, visibility .3s
			&.active
				opacity 1
				visibility visible
		.live-chat-container
			height calc(100% - 112px)
			max-height 100%
			width 100%
			overflow-y auto
			.chat-content
				width 95%
				margin 0 auto
				padding 10px 0
				height calc(100% - 20px)
				.loader
					background-image url("/img/loader.svg")
					background-size cover
					background-repeat no-repeat
					background-position center
					width 35px
					height 35px
					margin 20px auto
				.no-chats
					color #b8b8b8
					font-weight 500
					font-size 16px
					text-align center
					margin 20px 0 0
					display none
				.chat
					color white
					font-size 15px
					font-weight 500
					word-wrap break-word;
					letter-spacing .3px
					margin-bottom 25px
					&:last-child
						margin-bottom 0
						padding-bottom 25px
					&.muted
						color red
						text-align center
					&.cooldown
						color grey
						font-size 14px
						font-weight 400
						text-align center
					.chat-sender
						color #9aa5ab
						font-size 14px
						font-weight 600
						margin-right 5px
					.chat-emoji
						position relative
						// .emoji-tooltip
						//     background #333
						//     position absolute
						//     color white
						//     left 0
						//     padding 2px 10px
						//     top -30px
						//     z-index 1000
						//     display inline
						.chat-emoji-img
							width 30px
							height 30px
							margin-bottom -10px
					a
						color #f5613b
						text-decoration none
						&:hover
							text-decoration underline !important
		.input-container
			width 100%
			height 50px
			display flex
			justify-content left
			align-items center
			border-top 1px solid #132027
			.chat-input
				height calc(100% - 15px)
				background #0D171D
				border none
				resize none
				outline none
				width calc(100% - 82px)
				font-size 15px
				color white
				padding 0 10px 5px 20px
				letter-spacing .3px
				font-weight 500
				margin-top 15px
				&::placeholder
					color #adadad
					font-weight 400
			.emoji-btn
				width 35px !important
				.icon
					background-image url("/img/smile.svg")
					width 23px !important
					height 23px !important
					left 50% !important
					transform translate(-50%, -50%) !important
				.emoji-menu
					background #132027
					border 1px solid #172731
					box-shadow 0 0 12px 0 rgba(0,0,0,0.1)
					position absolute
					z-index 30
					width 238px
					height 325px
					right -5px
					bottom 55px
					overflow hidden
					display none
					user-select: none; /* supported by Chrome and Opera */
					-webkit-user-select: none; /* Safari */
					-khtml-user-select: none; /* Konqueror HTML */
					-moz-user-select: none; /* Firefox */
					-ms-user-select: none; /* Internet Explorer/Edge */
					&.show
						display block
					.flex-wrap
						align-items center
						justify-content center
						display flex
						margin 0 auto 6px
					.title
						font-size 18px
						font-weight 600
						color white
						letter-spacing .3px
					.new-notify
						color red
						font-size 11px
						font-weight 800
						letter-spacing .3px
						margin 3px 0 0 5px
						text-transform uppercase
					.search-bar-container
						.search-icon
							position absolute
							width 15px
							height 15px
							top calc(50% - 1px)
							transform translateY(-50%)
							left 10px
							background-position center
							background-size cover
							background-repeat no-repeat
							background-image url("/img/black-search-icon.svg")
							opacity 0.5
						.search-bar
							width 100%
							padding 8px 5px 8px 32px
							border none
							border-bottom 1px solid #e3e3e3
							color #333
							font-weight 300
							letter-spacing .3px
							font-size 14px
							outline none
							background transparent
					.no-emojis
						width fit-content
						margin 10px auto 0
						text-align center
						display none
						p
							font-size 30px
							margin-bottom 5px
						h2
							color #333
							font-size 14px
							font-weight 600
							letter-spacing .3px
					.loader
						background-image url("/img/loader.svg")
						background-size cover
						background-position center
						background-repeat no-repeat
						opacity 0.5
						width 30px
						height 30px
						margin 10px auto
					.all-emojis-container
						overflow-y auto
						overflow-x hidden
						height calc(100% - 10px)
						padding-top 10px
						.custom-emojis-container
							display flex
							justify-content left
							flex-wrap wrap
							width 95%
							margin 0 auto 20px
							height fit-content
							.custom-emoji
								width 28px
								height 28px
								margin 2.5px
								background-size cover
								display block
								cursor pointer
								background-position center
								background-repeat no-repeat
						.emojis-container
							display flex
							justify-content left
							flex-wrap wrap
							width 95%
							margin 0 auto
							height fit-content
							.emoji
								min-width 30px
								height 30px
								border-radius .3em
								position relative
								cursor pointer
								background transparent
								&.hide
									display none
								span
									position absolute
									margin 0
									top calc(50% + 2px)
									left calc(50% + 1px)
									font-size 22px
									transform translate(-50%, -50%)
			.submit-chat-btn
				.icon
					background-image url("/img/send.svg")
			.live-chat-action-btn
				width 50px
				height 100%
				position relative
				.icon
					background-position center
					background-size cover
					background-repeat no-repeat
					width 20px
					height 20px
					position absolute
					cursor pointer
					top 50%
					opacity 0.6
					left 6px
					transform translateY(-50%)
					transition opacity .3s
					&:hover
						opacity .9

// Report Error

.darken-overlay
	width 100%
	height 100vh
	position fixed
	opacity 0
	visibility hidden
	top 0
	left 0
	background rgba(0,0,0,0.7)
	transition visibility .3s, opacity .3s
	z-index 100

.report-error-modal
	width 400px
	height fit-content
	z-index 150
	opacity 0
	visibility hidden
	position fixed
	top calc(50% - 20px)
	left 50%
	background #0d171d
	transform translate(-50%, -50%) scale(0.5)
	max-width 95%
	max-height 95%
	transition opacity .3s, visibility .3s, transform .3s
	&.active
		opacity 1
		visibility visible
		transform translate(-50%, -50%) scale(1)
	.modal-top
		background #13222b
		width 100%
		padding 30px 0
		display flex
		justify-content space-between
		flex-flow row wrap
		align-items center
		.title
			color white
			margin-left 20px
			letter-spacing .5px
			font-weight 600
			font-size 22px
		.close
			background-image url("/img/close.svg")
			background-size cover
			background-repeat no-repeat
			background-position center
			width 18px
			height 18px
			cursor pointer
			margin-right 20px
			opacity 0.6
			transition opacity .3s
			&:hover
				opacity 1
	.modal-content
		position relative
		padding 30px 0
		.input-wrap
			margin 0 auto 25px
			width calc(100% - 40px)
		.error-description
			resize none
			background #13222b
			width 100%
			height 200px
			color white
			font-size 16px
			border none
			outline none
			font-weight 400
			padding 10px
			box-shadow inset 0 0 0 1px rgba(255,255,255,0.03)
			&::placeholder
				color #6b7780
		.error-type-select-wrap
			position relative
			&.error
				.select-btn
					box-shadow inset 0 0 0 1px #f00
			&.active
				.select-btn
					.icon
						transform rotate(180deg)
				.select-menu
					opacity 1
					visibility visible
					transform translateX(-50%)
			.select-btn
				width 100%
				height 40px
				background #13222b
				cursor pointer
				display flex
				justify-content space-between
				align-items center
				box-shadow inset 0 0 0 1px rgba(255,255,255,0.03)
				transition box-shadow .3s
				p
					color white
					font-size 16px
					font-weight 400
					letter-spacing .5px
					margin-left 10px
				.icon
					background-image url("/img/select-arrow.svg")
					background-size cover
					background-repeat no-repeat
					background-position center
					width 16px
					height 16px
					margin 4px 20px 0 0
					transition transform .3s
			.select-menu
				position absolute
				width calc(100% - 10px)
				top 50px
				left 50%
				opacity 0
				visibility hidden
				transform translate(-50%, 15px)
				z-index 100
				background #0d171d
				padding 1px 0
				box-shadow 0 0 12px 0 rgba(0,0,0,0.1), inset 0 0 0 1px rgba(255,255,255,0.07)
				transition opacity .3s, visibility .3s, transform .3s
				.option
					width calc(100% - 15px)
					padding 8px 0 8px 15px
					color white
					letter-spacing .3px
					font-size 15px
					cursor pointer
					transition background .3s
					&:hover
						background rgba(255,255,255,0.04)
		.submit-report-btn
			width calc(100% - 40px)
			margin 0 auto
			padding 10px 0
			background red
			cursor pointer
			transition background .3s
			&:hover
				background #e20000
			.icon
				background-image url("/img/send.svg")
				background-size cover
				background-repeat no-repeat
				background-position center
				width 18px
				height 18px
				position absolute
				top calc(50% + 1px)
				transform translateY(-50%)
				left 15px
			p
				text-align center
				color white
				font-weight 500
				letter-spacing .5px
				font-size 15px

body,
html
    background #14171e !important

.left-container
.right-container
    height 100%
    position fixed
    top 0

.right-container
    right 0
    width 100%
    background #14171e
    z-index 1
    .user-name
        position absolute
        top 20px
        right 20px
        color white
        font-size 17px
        letter-spacing .5px
        z-index 3
    .overlay
        background #16191f
        width 100%
        height 100%
        position absolute
        opacity .8
        top 0
        right 0
        z-index 2
    .splash-image
        height 100%
        width auto
        position absolute
        top 0
        right 0
        z-index 1
        filter grayscale(100%)

.left-container
    background #14171e
    width 60%
    clip-path: polygon(0 0, 100% 0%, 80% 100%, 0% 100%);
    z-index 2
    min-width 650px
    .main-content
        width calc(100% - 100px)
        margin 0 auto
        height 100%
        position relative
        .nav
            width 100%
            height 100px
            display flex
            align-items center
            .logo
                width 45px
                height 45px
        .header
            position absolute
            top calc(50% - 40px)
            transform translateY(-50%)
            .title
                color #fff
                font-size 80px
                letter-spacing .5px
                font-weight 800
                margin-bottom 5px
            .subtitle
                color #cecece
                font-size 20px
                letter-spacing .5px
            .action-button-container
                display flex
                margin-top 40px
                a
                    color white
                    font-size 18px
                    letter-spacing .5px
                    display block
                    padding 12px 25px
                    font-weight 600
                    border-radius 5px
                    transition background .3s
                .login-btn,
                .see-stream-btn
                    margin-right 20px
                    background #00a4ff
                    &:hover
                        background #077bbb
                .contact-btn
                    background #2c3142
                    &:hover
                        background #343a4e

@media only screen and (max-width: 900px)
    .right-container
        display none !important
    .left-container
        width 100% !important
        min-width 0 !important
        clip-path none !important
        
        .header
            left 50% !important
            width fit-content !important
            transform translate(-50%, -50%) !important
            text-align center !important
            .action-button-container
                justify-content center
            .title
                font-size 70px !important
            .subtitle
                font-size 21px !important

@media only screen and (max-width: 600px)
    .main-content
        width calc(100% - 40px) !important
    .left-container
        .header
            .title
                font-size 50px !important
            .subtitle
                font-size 19px !important
            .action-button-container
                margin-top 30px !important
                a
                    font-size 16px !important

@media only screen and (max-width: 450px)
    .main-content
        width calc(100% - 40px) !important
    .left-container
        .header
            .subtitle
                font-size 17px !important
            .action-button-container
                margin-top 25px !important
                a
                    font-size 15px !important
                    padding 10px 15px !important
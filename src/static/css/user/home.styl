body,
html
    background #14171e !important
    

.user-name
    position absolute
    top 20px
    right 20px
    color white
    font-size 17px
    letter-spacing .5px
    z-index 3

.bg
    position absolute
    top 0
    left 0
    z-index 1
    width 100%
    height 100%
    overflow hidden
    .overlay
        background #16191f
        width 100%
        height 100%
        position absolute
        opacity .8
        top 0
        left 0
        z-index 2
    .splash-video
        min-width 100%
        min-height 100%
        width auto
        height auto
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

.left-container
    z-index 2
    height 100%
    position absolute
    top 0
    left 50px
    .main-content
        width calc(100% - 100px)
        margin 0 auto
        height 100%
        position relative
        .nav
            width 100%
            height 100px
            display flex
            align-items center
            .logo
                width 45px
                height 45px
        .header
            position absolute
            top calc(50% - 40px)
            transform translateY(-50%)
            .title
                color #fff
                font-size 80px
                letter-spacing .5px
                font-weight 800
                margin-bottom 5px
            .subtitle
                color #cecece
                font-size 20px
                letter-spacing .5px
            .action-button-container
                display flex
                margin-top 40px
                a
                    color white
                    font-size 18px
                    letter-spacing .5px
                    display block
                    padding 12px 25px
                    font-weight 600
                    border-radius 5px
                    transition background .3s
                .login-btn,
                .see-stream-btn
                    margin-right 20px
                    background #026FFF
                    &:hover
                        background #0054c3
                .contact-btn
                    background #2c3142
                    &:hover
                        background #343a4e

@media only screen and (max-width: 900px)
    .left-container
        width 100% !important
        min-width 0 !important
        left 0 !important
        clip-path none !important
        .header
            left 50% !important
            width fit-content !important
            transform translate(-50%, -50%) !important
            text-align center !important
            .action-button-container
                justify-content center
            .title
                font-size 70px !important
            .subtitle
                font-size 21px !important

@media only screen and (max-width: 600px)
    .splash-video,
    .overlay
        display none !important
    .main-content
        width calc(100% - 40px) !important
    .left-container
        .header
            .title
                font-size 50px !important
            .subtitle
                font-size 19px !important
            .action-button-container
                margin-top 30px !important
                a
                    font-size 16px !important

@media only screen and (max-width: 450px)
    .main-content
        width calc(100% - 40px) !important
    .left-container
        .header
            .subtitle
                font-size 17px !important
            .action-button-container
                margin-top 25px !important
                a
                    font-size 15px !important
                    padding 10px 15px !important
body
	overflow hidden

.bg
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	.overlay
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba(0,0,0,0.7)
		z-index -1
	video
		position: fixed
		right: 0
		bottom: 0
		min-width: 100%
		min-height: 100%
		z-index -2

.logo-container
	background-image url("../img/dtech-logo.png")
	background-size cover
	background-repeat no-repeat
	background-position center
	width 45px
	height 45px
	position absolute
	top 30px
	left 37.5px

.content
	margin 150px auto
	display block
	width fit-content
	text-align center
	.title
		color white
		font-size 3.5rem
		letter-spacing .5px
	.subtitle
		color lightgrey
		margin-top 5px
		font-size 17px
		letter-spacing .3px
	.login-btn
		display flex
		background #F05027
		width fit-content
		align-items center
		padding 10px 20px
		border-radius .3em
		margin 60px auto 0
		box-shadow none
		transition box-shadow .3s linear
		&:hover
			box-shadow 0 0 12px 0 #bd4527
		.logo
			background-image url("/img/google.svg")
			background-size cover
			background-repeat no-repeat
			background-position center
			width 25px
			height 25px
			margin-top 2px
		p
			color white
			margin-left 15px
			letter-spacing .5px
			font-size 18px
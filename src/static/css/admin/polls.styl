.container
	width calc(100% - 2px)
	border 1px solid #191b1f
	background #101215
	margin-top 20px
	border-radius .3em
	.top-content
		background #191b1f
		width calc(100% - 40px)
		border-top-right-radius .3em
		border-top-left-radius .3em
		padding 0 20px
		height 60px
		display flex
		align-items center
		justify-content space-between
		.container-title
			color #c0c8cc
			font-size 22px
			letter-spacing .5px
			font-weight 500
			display block
			width fit-content
			text-align left
			word-break break-all
		#add-template-btn
			cursor pointer
			width 40px
			height 40px
			border-radius 40px
			transition background .3s	
			&:hover
				background rgba(255,255,255,0.05)
			.icon
				background-image url("/img/add-icon.svg")
				background-size cover
				background-position center
				background-repeat no-repeat
				width 20px
				height 20px
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
	.scroll-container
		overflow-y auto 
		overflow-y hidden
		max-height 750px
		width 100%
		.main-content
			width calc(100% - 40px)
			margin 20px auto
		.empty-container-notification
			color rgba(255,255,255,.4)
			letter-spacing .5px
			text-transform uppercase
			font-size 14px
			text-align center
			padding 40px 0
			font-weight 300
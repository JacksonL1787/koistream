.widget-flex-container
    width 100%
    display flex
    justify-content left
    margin-top 20px

.chat-widget,
.chat-details-widget
    height calc(100vh - 150px)
    max-height 824px
    background #0D171D
    box-shadow 0 0 10px 0 rgba(0,0,0,0.06)
    position relative

.chat-widget
    margin-right 20px
    width calc(100% - 520px)
    .title-container
        height 60px
        border-bottom 1px solid #132027
        width calc(100% - 30px)
        padding 0 15px
        position relative
        display flex
        justify-content space-between
        align-items center
        .title
            color lightgrey
            font-size 20px
            font-weight 500
            letter-spacing .3px
        .chat-status
            text-transform uppercase
            font-size 14px
            font-weight 800
            letter-spacing .3px
            margin-top 3px
    .enable-autoscroll
        background rgba(0,0,0,0.8)
        color white
        border none
        outline none
        font-size 14px
        position absolute
        padding 8px 20px
        bottom 65px
        left 50%
        transform translateX(-50%)
        cursor pointer
        letter-spacing .3px
        z-index 100
        border-radius .3em
        visibility hidden
        opacity 0
        transition opacity .3s, visibility .3s
        &.active
            opacity 1
            visibility visible
    .live-chat-container
        height calc(100% - 112px)
        max-height 100%
        width 100%
        overflow-y auto
        .chat-content
            width 100%
            margin 0 auto
            height calc(100% - 20px)
            .loader
                background-image url("/img/loader.svg")
                background-size cover
                background-repeat no-repeat
                background-position center
                width 35px
                height 35px
                margin 20px auto
            .no-chats
                color #b8b8b8
                font-weight 500
                font-size 16px
                text-align center
                margin 20px 0 0
                display none
            .chat
                color white
                font-size 15px
                font-weight 500
                word-wrap break-word;
                letter-spacing .3px
                width calc(100% - 20px)
                padding 10px
                cursor pointer
                transition background .3s
                &:hover
                    background #111d23
                &.active
                    background #172831
                .muted
                    color #fd5050
                    font-size 14px
                    text-transform uppercase
                    font-weight bold
                .chat-text
                    .flagged
                        font-weight 500 !important
                        color #fd5050 !important
                .chat-sender
                    color #adadad
                    font-size 14px
                    font-weight 600
                    margin-right 5px
                .chat-emoji
                    position relative
                    // .emoji-tooltip
                    //     background #333
                    //     position absolute
                    //     color white
                    //     left 0
                    //     padding 2px 10px
                    //     top -30px
                    //     z-index 1000
                    //     display inline
                    .chat-emoji-img
                        width 30px
                        height 30px
                        margin-bottom -10px
                a
                    color #f5613b
                    text-decoration none
                    &:hover
                        text-decoration underline !important
    .input-container
        width 100%
        height 50px
        display flex
        justify-content left
        align-items center
        border-top 1px solid #132027
        .chat-input
            height calc(100% - 15px)
            background #0D171D
            border none
            resize none
            outline none
            width calc(100% - 82px)
            font-size 15px
            color white
            padding 0 10px 5px 20px
            letter-spacing .3px
            font-weight 500
            margin-top 15px
            &::placeholder
                color #adadad
                font-weight 400
        .emoji-btn
            width 35px !important
            .icon
                background-image url("/img/smile.svg")
                width 23px !important
                height 23px !important
                left 50% !important
                transform translate(-50%, -50%) !important
            .emoji-menu
                background #132027
                border 1px solid #172731
                box-shadow 0 0 12px 0 rgba(0,0,0,0.1)
                position absolute
                z-index 30
                width 238px
                height 325px
                right -5px
                bottom 55px
                overflow hidden
                display none
                user-select: none; /* supported by Chrome and Opera */
                -webkit-user-select: none; /* Safari */
                -khtml-user-select: none; /* Konqueror HTML */
                -moz-user-select: none; /* Firefox */
                -ms-user-select: none; /* Internet Explorer/Edge */
                &.show
                    display block
                .flex-wrap
                    align-items center
                    justify-content center
                    display flex
                    margin 0 auto 6px
                .title
                    font-size 18px
                    font-weight 600
                    color white
                    letter-spacing .3px
                .new-notify
                    color red
                    font-size 11px
                    font-weight 800
                    letter-spacing .3px
                    margin 3px 0 0 5px
                    text-transform uppercase
                .search-bar-container
                    .search-icon
                        position absolute
                        width 15px
                        height 15px
                        top calc(50% - 1px)
                        transform translateY(-50%)
                        left 10px
                        background-position center
                        background-size cover
                        background-repeat no-repeat
                        background-image url("/img/black-search-icon.svg")
                        opacity 0.5
                    .search-bar
                        width 100%
                        padding 8px 5px 8px 32px
                        border none
                        border-bottom 1px solid #e3e3e3
                        color #333
                        font-weight 300
                        letter-spacing .3px
                        font-size 14px
                        outline none
                        background transparent
                .no-emojis
                    width fit-content
                    margin 10px auto 0
                    text-align center
                    display none
                    p
                        font-size 30px
                        margin-bottom 5px
                    h2
                        color #333
                        font-size 14px
                        font-weight 600
                        letter-spacing .3px
                .loader
                    background-image url("/img/loader.svg")
                    background-size cover
                    background-position center
                    background-repeat no-repeat
                    opacity 0.5
                    width 30px
                    height 30px
                    margin 10px auto
                .all-emojis-container
                    overflow-y auto
                    overflow-x hidden
                    height calc(100% - 10px)
                    padding-top 10px
                    .custom-emojis-container
                        display flex
                        justify-content left
                        flex-wrap wrap
                        width 95%
                        margin 0 auto 20px
                        height fit-content
                        .custom-emoji
                            width 28px
                            height 28px
                            margin 2.5px
                            background-size cover
                            display block
                            cursor pointer
                            background-position center
                            background-repeat no-repeat
                    .emojis-container
                        display flex
                        justify-content left
                        flex-wrap wrap
                        width 95%
                        margin 0 auto
                        height fit-content
                        .emoji
                            min-width 30px
                            height 30px
                            border-radius .3em
                            position relative
                            cursor pointer
                            background transparent
                            &.hide
                                display none
                            span
                                position absolute
                                margin 0
                                top calc(50% + 2px)
                                left calc(50% + 1px)
                                font-size 22px
                                transform translate(-50%, -50%)
        .submit-chat-btn
            .icon
                background-image url("/img/send.svg")
        .live-chat-action-btn
            width 50px
            height 100%
            position relative
            .icon
                background-position center
                background-size cover
                background-repeat no-repeat
                width 20px
                height 20px
                position absolute
                cursor pointer
                top 50%
                opacity 0.6
                left 6px
                transform translateY(-50%)
                transition opacity .3s
                &:hover
                    opacity .9

.chat-details-widget
    width 500px
    p.prompt-text
        color #adadad
        font-weight 500
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        letter-spacing .3px
        width fit-content
        font-size 18px
    .loader
        background-image url("/img/loader.svg")
        background-size cover
        background-repeat no-repeat
        background-position center
        width 35px
        height 35px
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display none
    .chat-details-content
        height fit-content
        width 100%
        display none
        .section
            border-bottom 1px solid #132027
        .top-container
            padding 18px 0
            .title
                color: #d3d3d3;
                font-size: 20px;
                font-weight: 500;
                letter-spacing: 0.3px;
                margin-left 15px
        .user-info-container
            padding 30px 0
            .profile-picture
                width 125px
                height 125px
                border-radius 125px
                margin 0 auto 10px
                background-size cover
                background-position center
                background-repeat no-repeat
            .user-name
                color white
                font-size 25px
                letter-spacing .3px
                font-weight 600
                text-align center
            .user-email
                color grey
                font-size 15px
                font-weight 300
                margin-top 5px
                text-align center
                letter-spacing .3px
        .chat-info-container
            padding 30px 0
            .chat-wrap
                width calc(100% - 40px)
                margin 0 auto
                &.unfiltered
                    margin-top 15px
                label
                    color grey
                    font-size 13px
                    letter-spacing .3px
                .chat
                    color white
                    font-size 15px
                    font-weight 500
                    margin-top 3px
                    word-wrap break-word;
                    letter-spacing .3px
                    width 100%
                    .chat-text
                        .flagged
                            font-weight 500 !important
                            color #fd5050 !important
                    .chat-emoji
                        position relative
                        .chat-emoji-img
                            width 30px
                            height 30px
                            margin-bottom -10px
        .mute-user-btn,
        .delete-chat-btn
            height 45px
            position relative
            cursor pointer
            transition background .3s
            &:hover
                background #111d23
            p
                color white
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)
                letter-spacing .3px
                font-weight 600
                font-size 16px
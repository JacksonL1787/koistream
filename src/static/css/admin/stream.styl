.widget-flex-container
	display flex
	width 100%
	justify-content center

.widget-column-container
	margin-right 100px
	&:last-child
		margin-right 0

.blue-round-text-button-style
	color #fff
	font-size 15px
	letter-spacing .5px
	font-weight 600
	padding 10px 30px
	border-radius 5px
	background #026FFF
	border none
	outline none
	cursor pointer
	transition background .3s
	&:hover
		background #0054c3 !important

.widget-container
	margin-bottom 40px
	.widget-title
		color #fff
		font-size 15px
		font-weight 600
		letter-spacing 1px
		text-transform uppercase
		margin-bottom 15px

#quick-actions-widget
	.quick-actions-container
		width 350px
		height fit-content
		padding 20px 0
		background #14161d
		border-radius 5px
		.action-button
			width calc(100% - 60px)
			margin 0 auto 20px
			padding 10px 15px
			border-radius 5px
			display flex
			align-items center
			cursor pointer
			justify-content left
			transition background .3s
			&:last-child
				margin-bottom 0
			&:hover
				background #1b1e27
			.icon
				width 35px
				height 35px
				margin-right 20px
			.button-details
				.value
					color #fff
					font-size 16px
					letter-spacing .5px
					font-weight 700
				.description
					color #acb8ca
					letter-spacing .5px
					font-size 14px
					margin-top -2px
					font-weight 300

#stream-information-widget
	.stream-information-form-container
		width 500px
		height fit-content
		padding 20px 0
		background #14161d
		border-radius 5px
		.input-container
			width calc(100% - 60px)
			margin 0 auto
			margin-bottom 25px
			position relative
			.label
				color #acb8ca
				font-size 15px
				font-weight 500
				letter-spacing .5px
				margin-bottom 5px
			textarea
				resize none
				height 150px
			input,
			textarea
				outline none
				width 100%
				overflow-y auto
				overflow-x hidden
				background #111217
				border 1px solid #20232f
				color #fff
				font-weight 500
				font-size 15px
				letter-spacing .5px
				border-radius 5px
				padding 8px
				transition border-color .3s
				&:focus
					border-color #026FFF
		.update-stream-information-button
			margin 0 auto 10px
			display block

#stream-preview-widget
	.video-preview-container
		width 500px
		height fit-content
		padding 30px 0
		background #14161d
		border-radius 5px
		position relative
		overflow hidden
		.ratio-container
			width fit-content
			position relative
			overflow hidden
			margin-left 30px
			.video-ratio-controller
				width calc(100% - 30px)
			#stream-video
				width calc(100% - 30px)
				height 100%
				position absolute
				top 0
				left 0
				outline none !important
				background #000000 !important
				.vjs-control-bar
					height 5em !important
					background-color #00000099 !important
					align-items center !important
					transition opacity .5s !important
				.vjs-button,
				.vjs-control
					height 3em !important
					outline none !important
				.vjs-icon-placeholder::before
					font-size 2em !important
				.vjs-remaining-time
					display none !important
				.vjs-progress-control
					opacity 0 !important
					visibility hidden !important
				.vjs-picture-in-picture-control
					display none !important
				.vjs-big-play-button
					top 50% !important 
					left 50% !important 
					transform translate(-50%, -50%)
					background transparent !important
					border none !important
					font-size 6em
					transition none !important
				.vjs-tech
					background #000000 !important
		.disclaimer
			color #acb8ca
			font-weight 600
			text-align center
			margin 20px 0 5px
			font-size 15px

#stream-controls-widget
	.stream-controls-container
		width 350px
		height fit-content
		border-radius 5px
		display flex
		align-items center
		flex-flow row wrap
		.big-button-container
			background #3c3e46
			width 160px
			height 100px
			border-radius 5px
			cursor pointer
			margin-right 30px
			transition background .3s
			position relative
			&:hover
				background #5a5c67
			&.active
				background #026fff
			&:nth-child(2n)
				margin-right 0
			.value
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)
				text-align center
				color #fff
				text-transform uppercase
				font-weight 300
				font-size 16px
				letter-spacing 1px


#viewers-modal
	max-width 650px
	.modal-top
		justify-content space-between
		.modal-title
			color #fff
			font-size 30px
			font-weight 700
			letter-spacing .5px
	.modal-content
		.top-flex-wrap
			display flex
			justify-content left
			align-items center
			.refresh-button
				width 42px
				height 42px
				min-width 42px
				min-height 42px
				background #026FFF
				margin-left 10px
				cursor pointer
				position relative
				border-radius 5px
				transition background .3s
				&:hover
					background #0054c3
				&.rotate
					.icon
						animation rotateRefreshIcon .3s linear
				.icon
					width 24px
					height 24px
					position absolute
					top 50%
					left 50%
					transform translate(-50%, -50%)
			.search-input-container
				width 100%
				height fit-content
				position relative
				.icon-container
					position absolute
					left 1px
					top 1px
					background #21242f
					height calc(100% - 2px)
					width 40px
					border-right 1px solid #2b303e
					border-top-left-radius 5px
					border-bottom-left-radius 5px
					.icon
						position absolute
						top 50%
						opacity 0.4
						left 50%
						transform translate(-50%, -50%)
						width 24px
						height 24px
				#viewer-search-input
					outline none
					width 100%
					overflow-y auto
					overflow-x hidden
					background #1c1e27
					border 1px solid #2b303e
					color #fff
					font-weight 500
					font-size 16px
					letter-spacing .5px
					border-radius 5px
					padding 10px 10px 10px 50px
					transition border-color .3s
					&:focus
						border-color #026FFF
		.no-results,
		.no-viewers
			color #acb8ca
			font-size 16px
			margin-top 60px
			text-align center
			letter-spacing .5px
			display none
			&.active
				display block
		.viewers-container
			width 100%
			position relative
			margin-top 30px
			.viewer
				display none
				align-items center
				justify-content space-between
				padding 15px 10px
				border-bottom 1px solid #373d4e
				transition background .3s
				&.active
					display flex
				&.no-bottom-border
					border-bottom none !important
				&:hover
					background #1d1f27
					.go-to-icon
						opacity 1
				&:last-of-type
					border-bottom none !important
				.user-name
					color #fff
					letter-spacing .5px
					font-weight 600
				.user-email
					color #acb8ca
					font-weight 500
					letter-spacing .5px
				.go-to-icon
					width 26px
					height 26px
					transform rotate(180deg)
					opacity 0
					transition opacity .3s



.widget-column-container
	width 100%

.widget-flex-container
	display flex
	width 100%
	justify-content left
	position relative
	margin-bottom 20px

.blue-round-text-button-style
	color #fff
	font-size 15px
	letter-spacing .5px
	font-weight 600
	padding 10px 30px
	border-radius 5px
	background #026FFF
	border none
	outline none
	cursor pointer
	transition background .3s
	&:hover
		background #0054c3 !important

#stream-widget
	margin-right 20px
	width 450px
	min-width 450px
	.video-preview-container
		width 100%
		height fit-content
		position relative
		overflow hidden
		.ratio-container
			width fit-content
			position relative
			overflow hidden
			.video-ratio-controller
				width 100%
			#stream-video
				width 100%
				height 100%
				position absolute
				top 0
				left 0
				outline none !important
				background #000000 !important
				.vjs-control-bar
					height 5em !important
					background-color #00000099 !important
					align-items center !important
					transition opacity .5s !important
				.vjs-button,
				.vjs-control
					height 3em !important
					outline none !important
				.vjs-icon-placeholder::before
					font-size 2em !important
				.vjs-remaining-time
					display none !important
				.vjs-progress-control
					opacity 0 !important
					visibility hidden !important
				.vjs-picture-in-picture-control
					display none !important
				.vjs-big-play-button
					top 50% !important 
					left 50% !important 
					transform translate(-50%, -50%)
					background transparent !important
					border none !important
					font-size 6em
					transition none !important
				.vjs-tech
					background #000000 !important
		.disclaimer
			color #acb8ca
			font-weight 600
			text-align center
			margin 20px 0 5px
			font-size 15px
	.stream-information-form-container
		width 100%
		height fit-content
		padding 20px 0
		background #14161d
		border-radius 5px
		border-top-right-radius 0
		border-top-left-radius 0
		.input-container
			width calc(100% - 30px)
			margin 0 auto
			margin-bottom 25px
			position relative
			.label
				color #acb8ca
				font-size 15px
				font-weight 500
				letter-spacing .5px
				margin-bottom 5px
			textarea
				resize none
				height 150px
			input,
			textarea
				outline none
				width 100%
				overflow-y auto
				overflow-x hidden
				background #191a21
				border 1px solid #2b303e
				color #fff
				font-weight 500
				font-size 15px
				letter-spacing .5px
				border-radius 5px
				padding 8px
				transition border-color .3s
				&:focus
					border-color #026FFF
		.update-stream-information-button
			margin 0 auto 10px
			display block

#stream-activity-widget
	width 100%
	max-height 100%
	.activity-container
		width 100%
		height 409px
		background #14161d
		border-radius 5px
		overflow-y auto
		position relative
		.stream-offline-message
			position absolute
			top calc(50% - 10px)
			left 50%
			transform translate(-50%, -50%)
			display none
			color #acb8ca
			letter-spacing .5px
			font-size 17px
			&.active
				display block
		.activity-content
			padding 25px 0
			width calc(100% - 30px)
			margin 0 auto
			.divider
				width 45px
				height 15px
				margin 10px 0
				position relative
				&:last-child
					display none
				.line
					background #232733
					width 2px
					height 100%
					border-radius 10000px
					left 50%
					transform translateX(-50%)
					position absolute
			.activity-log
				display flex
				align-items center
				width 100%
				.profile-picture
					margin-right 15px
					width 45px
					height 45px
					border-radius 45px
				.info-container
					width 100%
					a,
					p
						letter-spacing .5px
						margin 0
					.user-name
						color #026fff
						font-size 16px
						font-weight 800
						text-decoration none
						cursor pointer
						&:hover
							text-decoration underline
					.message
						color #fff
						font-size 14px
						font-weight 400
				.timestamp
					color #788496
					font-size 13px
					font-weight 600
					min-width fit-content

#data-widget
	width 100%
	.data-container
		width 100%
		padding 15px 0
		background #14161d
		border-radius 5px
		margin-bottom 15px
		&:last-child
			margin-bottom 0
		.data-content
			width calc(100% - 30px)
			margin 0 auto
			display flex
			justify-content space-between
			align-items center
			.info-container
				display flex
				align-items center
				.icon-container
					background rgba(2,111,255,0.12)
					width 50px
					height 50px
					border-radius 5px
					position relative
					margin-right 15px
					.icon
						width 30px
						height 30px
						position absolute
						top 50%
						left 50%
						transform translate(-50%, -50%)
				.data-value
					color #acb8ca
					font-size 16px
					font-weight 500
					letter-spacing .5px
					b
						color #fff
			.action-container
				.show-all-viewers-button
					display flex
					align-items center
					cursor pointer
					&:hover
						.value
							margin-right 11px
						.icon
							margin-right -3px
					.value
						color #026fff
						font-weight 600
						letter-spacing .5px
						margin-right 8px
						transition margin-right .3s
					.icon
						width 24px
						height 24px
						transform rotate(180deg)
						transition margin-right .3s

#stream-controls-widget
	margin-right 20px
	.controls-container
		width 300px
		height fit-content
		padding 25px 0
		background #14161d
		border-radius 5px
		.divider
			background #1a1c25
			width 100%
			height 1px
			margin 25px auto
		.control
			width calc(100% - 30px)
			margin 0 auto
			position relative
			&:last-child
				margin-bottom 0
			&#chat-switch-control,
			&#slow-mode-switch-control,
			&#stream-switch-control,
			&#slate-switch-control
				margin-bottom 15px
			&.button-control
				.button-container
					width calc(100% - 20px)
					display flex
					align-items center
					padding 8px 10px
					border-radius 10000px
					cursor pointer
					transition background .3s
					&.normal-button
						border 1px solid #026fff33
						background #026fff14
						&:hover
							background #026fff1c
						.icon
							fill #026fff
						.value
							color #026fff

					&.danger-button
						border 1px solid #f5252533
						background #f5252514
						&:hover
							background #f525251c
						.icon
							fill #f52525
						.value
							color #f52525
					.icon
						width 22px
						height 22px
						margin-right 10px
						transition fill .3s
					.value
						font-size 15px
						letter-spacing .5px
						font-weight 700
						transition color .3s
			&.switch-control
				display flex
				align-items center
				justify-content space-between
				.value
					color #fff
					font-size 16px
					letter-spacing .5px
					font-weight 500
				.switch-wrap
					display flex
					border 1px solid #20232f
					border-radius 10000px
					padding 8px 15px
					justify-content center
					align-items center
					cursor pointer
					transition background .3s
					&:hover
						background #20232f
					&.active
						.status
							color #fff
						.switch
							background #026FFF
							.dot
								left calc(100% - 4px - 18px)
					.status
						width 45px
						color #788496
						font-size 14px
						letter-spacing .5px
						text-transform uppercase
					.switch
						background #3e444e
						width 42px
						height 24px
						border-radius 100000px
						position relative
						transition background .3s
						.dot
							background #fff
							width 18px
							height 18px
							border-radius 10000px
							position absolute
							top 50%
							transform translateY(-50%)
							left 4px
							transition left .3s


@keyframes rotateRefreshIcon
	0%
		transform translate(-50%, -50%) rotate(0deg)
	100%
		transform translate(-50%, -50%) rotate(360deg)
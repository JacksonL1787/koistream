.start-stream-modal
    width 400px
    height fit-content
    .modal-bottom
        .stream-title,
        .stream-runner
            background #13222b
            color white
            font-size 15px
            font-weight 500
            letter-spacing .3px
            outline none
            border none
            width 100%
            padding 8px
            box-shadow 0 0 12px 0 rgba(0,0,0,0.1)
            transition background .3s, box-shadow .3s
            &::placeholder
                color #6b7780
                font-weight 500
            &:focus
                background #121f27
            &.error
                box-shadow 0 0 12px 0 rgba(0,0,0,0.1), inset 0 0 0 1px red
        .stream-runner
            resize none
            height 100px
        .stream-title
            margin-bottom 15px
        .start-stream-btn
            background #de421a
            color white
            font-weight 500
            font-size 15px
            letter-spacing .5px
            float right
            padding 7px 12px
            border none
            outline none
            cursor pointer 
            transition background .3s
            margin-top 15px
            border-radius .3em
            &:hover
                background #b7310e

.stop-stream-modal
    width 400px
    .modal-bottom
        p
            color white
            text-align center
            font-size 17px
            font-weight 500
            letter-spacing .3px        
        .stop-stream-btn

.page-title-wrap
    display none
    align-items center
    margin-top 20px
    .page-title
        margin 0 !important
    .refresh-btn
        background #191b1f
        box-shadow 0 0 12px 0 rgba(0,0,0,0.1), inset 0 0 0 1px rgba(255,255,255,0.05)
        cursor pointer
        margin-left 20px
        padding 10px 15px
        border-radius .3em
        transition background .3s, box-shadow .3s
        &.active
            .icon
                animation refreshRotate linear infinite .6s
        &:hover
            background #23262b
            box-shadow 0 0 12px 0 rgba(0,0,0,0.1), inset 0 0 0 1px rgba(255,255,255,0.1)
        .icon
            background-image url("/img/admin/viewers/refresh.svg")
            background-size cover
            background-repeat no-repeat
            background-position center
            width 15px
            height 15px

.viewers-table
    width 100%
    border-collapse collapse
    margin-top 20px
    display none
    tr
        &.head-row
            border-bottom 1px solid #23262b
        th
            text-align left
            color #a5aaad
            padding 15px
            font-weight 600
            letter-spacing .5px
            font-size 15px
            background #191b1f
            .flex-wrap
                display flex
                align-items center
                .icon
                    background-position center
                    background-repeat no-repeat
                    background-size cover
                    width 20px
                    height 20px
                    margin-right 10px
        .name-head .icon
            background-image url("/img/admin/viewers/name.svg")
        .email-head .icon
            background-image url("/img/admin/viewers/email.svg")
        .join-time-head .icon
            margin-top 1px
            background-image url("/img/admin/viewers/join-time.svg")
        .name-head,
        .name-info
            padding-left 20px
        .join-time-head,
        .join-time-info
            padding-right 20px
        td
            padding 15px
            color white
            letter-spacing .3px
        .name-info
            display flex
            align-items center
            .profile-picture
                background orange
                background-size cover
                background-repeat no-repeat
                background-position center
                width 30px
                height 30px
                border-radius 30px
                margin 1px 12px 0 0

.loader
    background-image url("/img/loader.svg")
    background-size cover
    background-position center
    background-repeat no-repeat
    width 35px
    height 35px
    margin 30px auto

.no-viewers
    margin 30px 0
    text-align center
    font-size 16px
    letter-spacing .3px
    color white
    display none

@keyframes refreshRotate
    0%
        transform rotate(0deg)
    100%
        transform rotate(360deg)
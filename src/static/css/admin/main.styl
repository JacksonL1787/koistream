
@import url('https://fonts.googleapis.com/css?family=Muli:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap');
body 
    margin 0
    font-family "Nunito", sans-serif !important
    background #111217

h1
    font-family "Muli", sans-serif !important

h1, h2, h3, h4, h5, h6, p, span 
    margin 0

textarea,
input,
button
    font-family "Nunito", sans-serif !important

a, a:visited, a:hover, a:active, a:focus {
   text-decoration: none !important;
   outline: none !important;
   color white
}

::-webkit-scrollbar
    background-color:transparent;
    width:16px

::-webkit-scrollbar-track
    background-color:transparent

::-webkit-scrollbar-thumb
    background-color:#a2a3a8;
    border-radius:16px;
    border:5px solid transparent
    //min-height: 150px;
    background-clip: content-box;

::-webkit-scrollbar-thumb:hover
    background-color:#cacbcf;


/* set button(top and bottom of the scrollbar) */
::-webkit-scrollbar-button 
    display:none

::-webkit-scrollbar-corner 
    background: rgba(0,0,0,0.2)

[contenteditable=true]:empty:before{
    content: attr(placeholder);
    pointer-events: none;
    display: block;
    color #686e84
}

#nav
    width 300px
    height 100%
    position fixed
    top 0
    left 0
    background #14161d
    border-right 1px solid #1b2129
    .nav-scroll-container
        width 100%
        height 100%
        overflow-y auto
        overflow-x hidden
        .nav-content-container
            width calc(100% - 60px)
            margin 0 auto
            .header-container
                width 100%
                height 125px
                position relative
                display flex
                justify-content left
                align-items center
                .logo
                    width 40px
                    height 40px
                    margin-right 12px
                .title
                    color #fff
                    font-size 24px
                    letter-spacing 1px
        .nav-links-container
            .nav-link
                display flex
                margin-bottom 25px
                cursor pointer
                align-items center
                padding 10px
                border-radius 5px
                transition background .3s
                &:hover
                    background #1b1e27
                &.active
                    background #026FFF
                .icon
                    width 25px
                    height 25px
                    margin-right 10px
                .value
                    color #fff
                    font-size 16px
                    font-weight 600
                    letter-spacing .5px

#page-container
    height 100%
    overflow-y auto
    width calc(100% - 301px)
    position fixed
    top 0
    left 301px
    overflow-y auto
    overflow-x hidden
    #page-content
        margin 50px auto
        width calc(100% - 100px)
        position relative
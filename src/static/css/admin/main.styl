body
	background #0e1013
	overflow hidden
	&.modal-active
		.modal-overlay 
			opacity 1 !important
			visibility visible !important
	&.nav-inactive
		.nav
			left -350px !important
		.page-container
			width 100% !important
			margin-left 0

.hidden
	display none !important

.fade-hidden
	opacity 0 !important
	visibility hidden !important

.modal-overlay
	opacity 0
	visibility hidden
	top 0
	left 0
	width 100%
	height 100%
	position fixed
	z-index 100
	background rgba(0,0,0,0.7)
	transition visibility .3s, opacity .3s
	
.notification
	position fixed
	bottom 10px
	opacity 0
	right 20px
	z-index 1000
	max-width 350px
	padding 15px
	display none
	justify-content left
	align-items center
	height fit-content
	background #15171b
	box-shadow inset 0 0 0 1px rgba(255,255,255,0.1)
	.icon
		background-image url("/img/notification.svg")
		background-size cover
		background-position center
		background-repeat no-repeat
		width 20px
		height 20px
		min-width 20px
		min-height 20px
		margin-right 10px
	.message
		color white
		font-size 15px
		letter-spacing .3px
		line-height 120%
		word-break: break-all
		-webkit-hyphens auto
		-moz-hyphens auto
		-ms-hyphens auto
		hyphens auto
		
.nav
	background #101215
	width 300px
	height 100%
	position fixed
	top 0
	left 0
	z-index 5
	box-shadow 0 0 12px 0 rgba(0,0,0,0.1)
	overflow hidden
	transition left .3s
	.nav-content
		width 100%
		height 100%
		overflow-y auto
		.bottom-content
			.link-wrap
				width 100%
				padding 15px 0
				border-top 1px solid rgba(255,255,255,0.04)
				display block
				transition background .3s
				&:hover
					background rgba(255,255,255,0.02)
				p
					color white
					font-weight 600
					font-size 16px
					text-align center
		.top-content
			min-height 517px
			height calc(100% - 122px)
			margin-top 20px
			.logo-container
				margin 0 0 0 25px
				display flex
				justify-content left
				align-items center
				.logo
					background-image url("/img/dtech-logo.png")
					background-size cover
					background-position center
					background-repeat no-repeat
					width 37px
					height 37px
					margin-right 10px
				.title
					color white
					font-size 22px
					letter-spacing .3px
			.nav-links
				margin 40px 0 0 25px
				width calc(100% - 50px)
				.link-wrap
					position relative
					display block
					width 100%
					height 40px
					margin-bottom 30px
					background none
					border-radius .3em
					display flex
					justify-content left
					align-items center
					cursor pointer
					&:hover
						background rgba(255,255,255,0.04)
					&.active
						background #F05027
					.icon 
						background-size cover
						background-position center
						background-repeat no-repeat
						margin 0 20px
					p
						color white
						font-weight 600
						letter-spacing .3px
						font-size 16px

.page-container
	width calc(100% - 300px)
	height 100%
	position relative
	margin-left 300px
	overflow-y auto
	transition margin-left .3s, width .3s
	.page-content
		height fit-content
		width calc(100% - 80px)
		margin 20px auto
		.menu-btn
			cursor pointer
			width fit-content
			display none
			&:hover
				.bar
					background #F05027 !important
			.bar
				height 3px
				width 28px
				background #344a56
				margin 5px 0
				transition background .3s
		.page-title
			color white
			font-weight 600
			letter-spacing .5px
			font-size 30px
			margin-top 20px
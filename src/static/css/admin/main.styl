
@import url('https://fonts.googleapis.com/css?family=Muli:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap');
body 
	margin 0
	font-family "Nunito", sans-serif !important
	background #111217

h1
	font-family "Muli", sans-serif !important

h1, h2, h3, h4, h5, h6, p, span 
	margin 0

textarea,
input,
button
	font-family "Nunito", sans-serif !important

a, a:visited, a:hover, a:active, a:focus {
   text-decoration: none;
   outline: none !important;
   color white
}

::-webkit-scrollbar
	background-color:transparent;
	width:16px

::-webkit-scrollbar-track
	background-color:transparent

::-webkit-scrollbar-thumb
	background-color:#a2a3a8;
	border-radius:16px;
	border:5px solid transparent
	//min-height: 150px;
	background-clip: content-box;

::-webkit-scrollbar-thumb:hover
	background-color:#cacbcf;


/* set button(top and bottom of the scrollbar) */
::-webkit-scrollbar-button 
	display:none

::-webkit-scrollbar-corner 
	background: rgba(0,0,0,0.2)

[contenteditable=true]:empty:before{
	content: attr(placeholder);
	pointer-events: none;
	display: block;
	color #686e84
}

#nav
	width 300px
	height 100%
	position fixed
	top 0
	left 0
	background #14161d
	border-right 1px solid #1b2129
	.nav-scroll-container
		width 100%
		height 100%
		overflow-y auto
		overflow-x hidden
		position relative
		.nav-content-container
			width calc(100% - 60px)
			margin 0 auto
			position relative
			.header-container
				width 100%
				height 125px
				position relative
				display flex
				justify-content left
				align-items center
				.logo
					width 40px
					height 40px
					margin-right 12px
				.title
					color #fff
					font-size 24px
					letter-spacing 1px
		.nav-links-container
			.nav-link
				display flex
				margin-bottom 25px
				cursor pointer
				align-items center
				padding 10px
				border-radius 5px
				transition background .3s
				&:hover
					background #1b1e27
				&.active
					background #026FFF
				.icon
					width 25px
					height 25px
					margin-right 10px
				.value
					color #fff
					font-size 16px
					font-weight 600
					letter-spacing .5px
		.nav-bottom-container
			position absolute
			bottom 40px
			left 50%
			transform translateX(-50%)
			width calc(100% - 60px)
			display flex
			align-items center
			justify-content space-around
			.icon-link-button
				width 50px
				height 50px
				background #1b1e27
				border-radius 8px
				cursor pointer
				position relative
				transition background .3s
				&:hover
					background #026FFF
				.icon
					width 28px
					height 28px
					position absolute
					top 50%
					left 50%
					transform translate(-50%, -50%)
#page-container
	height 100%
	overflow-y auto
	width calc(100% - 301px)
	position fixed
	top 0
	left 301px
	overflow-y auto
	overflow-x hidden
	#page-content
		margin 50px auto
		width calc(100% - 100px)
		position relative

#modal-active-overlay
	position fixed
	z-index 100
	background #04080ae3
	opacity 0
	visibility hidden
	top 0
	left 0
	width 100%
	height 100%
	transition opacity .3s, visibility .3s
	&.active
		opacity 1
		visibility visible 

.modal-container
	opacity 0
	z-index 101
	visibility hidden
	width 95%
	position fixed
	top calc(50% + 30px)
	left 50%
	border-radius 8px
	overflow-y auto
	max-height 90vh
	transform translate(-50%, -50%)
	background #191a21
	transition opacity .3s, visibility .3s, top .3s
	&.active
		opacity 1
		visibility visible
		top 50%
	.modal-top
		display flex
		width calc(100% - 40px)
		height 80px
		align-items center
		justify-content flex-end
		margin 0 auto
		.modal-top-action-button-styles
			cursor pointer
			width 45px
			height 45px
			border-radius 45px
			position relative
			background rgba(255,255,255,0.08)
			transition background .3s
			&:hover
				background rgba(255,255,255,0.15)
				.icon
					opacity 1
			.icon
				width 18px
				height 18px
				position absolute
				opacity .7
				transition opacity .3s
				top 50%
				left 50%
				transform translate(-50%, -50%)
	.modal-content
		padding 0 0 30px
		width calc(100% - 40px)
		margin 0 auto

.widget-container
	.widget-title
		color #fff
		font-size 15px
		font-weight 600
		letter-spacing 1px
		text-transform uppercase
		margin-bottom 15px

.loading-bar
	background #005CFF
	max-width 250px
	margin 0 auto
	width 90vw
	height 5px
	border-radius 5px
	position relative
	overflow hidden
	.inside-loader
		width 100%
		height 100%
		position absolute
		left 0
		background linear-gradient(90deg, transparent, #00C8F3 25%, #00C8F3 75%, transparent)
		animation loading-bar  1.5s infinite linear

@keyframes loading-bar
	0%
		left -100%
	100%
		left 100%
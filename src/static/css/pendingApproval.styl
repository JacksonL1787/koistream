body
	overflow hidden

.bg
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	background-image linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url("/img/schoolSide.jpeg")
	background-size cover
	background-repeat no-repeat
	background-position center
	filter: blur(8px);
	-webkit-filter: blur(8px);
	transform scale(1.1)

.logo-container
	background-image url("../img/dtech-logo.png")
	background-size cover
	background-repeat no-repeat
	background-position center
	width 45px
	height 45px
	position absolute
	top 30px
	left 37.5px

.content
	margin 150px auto
	display block
	width fit-content
	text-align center
	.title
		color white
		font-size 3.5rem
		letter-spacing .5px
	.subtitle
		color lightgrey
		font-size 17px
		letter-spacing .3px
		max-width 80%
		margin 5px auto 0
	.logout-btn
		display flex
		background #F05027
		width fit-content
		align-items center
		padding 10px 60px
		border-radius .3em
		margin 60px auto 0
		box-shadow none
		transition box-shadow .3s linear
		&:hover
			box-shadow 0 0 12px 0 #bd4527
		p
			color white
			letter-spacing .5px
			font-size 18px
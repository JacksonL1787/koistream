html
	head
		title=name
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="stylesheet" href="/css/admin/main.css")
		link(rel="stylesheet" href="/css/admin/inspect-user.css")
		link(rel='apple-touch-icon' sizes='180x180' href='/img/favicons/apple-touch-icon.png')
		link(rel='icon' type='image/png' sizes='32x32' href='/img/favicons/favicon-32x32.png')
		link(rel='icon' type='image/png' sizes='16x16' href='/img/favicons/favicon-16x16.png')
		link(rel='manifest' href='/img/favicons/site.webmanifest')

		script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/lodash.js/4.17.15/lodash.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js")
		script.
			window.userId = "#{googleId}"
	body

		img.back-button(src="/img/back-icon-white.svg")
		.main-content
			.profile-info-widget
				.account-type-banner
					h2.value
				.basic-info-container.padding-container
					img.user-profile-picture
					h1.user-name
					p.user-email
				.divider
				.date-information-container.padding-container
					p.info-label Last Online
					p.last-online-value
					p.info-label Date Created
					p.date-created-value
				.chat-settings-container.padding-container
					p.info-label Selected Chat Tag
					p.chat-tag-value
					p.info-label Selected Name Color
					.name-color-value
						.color-bubble
						p
				.divider
				.controls-container.padding-container
					.control.switch-control#admin-account-switch-control
						.description-container
							p.value Admin Account
							p.desc Give user admin access
						.switch-wrap
							p.status NO
							.switch
								.dot
					.control.switch-control#mute-user-switch-control
						.description-container
							p.value Muted
							p.desc Prevent user from chatting
						.switch-wrap
							p.status NO
							.switch
								.dot
					.control.button-control
						.description-container
							p.value Delete Account
							p.desc Permenantly remove all user data
						button.delete-account-button Delete

		script(src="/js/admin/inspect-user.js")

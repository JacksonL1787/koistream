link(href="https://unpkg.com/video.js@7/dist/video-js.min.css" rel="stylesheet")

.modal.start-stream-modal
    .modal-top
        .top-content
            h1.modal-title Start Stream
            .close
    .modal-bottom
        .bottom-content
            input.stream-title(placeholder="Stream Title" data-gramm_editor="false")
            textarea.stream-runner(placeholder="Stream Description" data-gramm_editor="false")
            select.stream-email(style="width: 100%; height: 40px; margin-top: 15px; background: #13222b; border: none; font-weight: 600; color: #9aa5ab; font-family: muli; font-size: 15px; padding-left: 10px; outline: none; }")
                option Send Email Notifications
                option No Email Notifications
            button.start-stream-btn Start
.modal.stop-stream-modal
    .modal-top
        .top-content
            h1.modal-title Stop Stream
            .close
    .modal-bottom
        .bottom-content
            p Are you sure you want to stop the stream?
            button.stop-stream-btn Stop
.stream-status.hidden
    .dot
    p
.loader

.stream-inactive-container.hidden
    .previous-streams-widget

.stream-active-container.hidden
    .started-by 
        p.label Stream Started By:
        a.user(target="_blank")
            .profile-picture
            p.user-name
            .external-link-icon
    .stream-view-widget.widget
        .widget-content
            h1.title Stream View
            .stream-video-wrap
                .stream-video
                    img(src="/img/countdown-bg.png")
                    .slate.reg-image
            .stream-info
                h1.stream-title
                p.stream-runner
    .stream-timer-widget.widget
        h1.title Stream Timer
        p.start-time Started on Wednesday, July 8, 2020 at 10:50 PM
        .timer
            .hours-wrap.time-unit-wrap
                h1.time
                p.label Hours
            p.divider :
            .minutes-wrap.time-unit-wrap
                h1.time
                p.label Minutes
            p.divider :
            .seconds-wrap.time-unit-wrap
                h1.time
                p.label Seconds
    .slate-control-widget.widget
        .widget-content
            h1.title Stream Controls
            button.reload-stream-clients-source Force Reload Stream Source
    .slate-control-widget.widget
        .widget-content
            h1.title Slate Controls
            .slate-select
                .slate-option.off-slate(data-type="off")
                    p.turn-off-slate Remove Slate
            

